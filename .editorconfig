root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab
tab_width = 8
max_line_length = 120

[*.{toml,yaml,yml,json}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[{Makefile,*.mk}]
indent_style = tab

[*.sh]
indent_style = space
indent_size = 2